<h2>Create New Movie</h2>

<%= form_tag movies_path, class: 'form' do %>
  <%= label :movie, :title, 'Title', class: 'col-form-label' %>
  <%= text_field :movie, :title, class: 'form-control', value: @movie&.dig(:name) %>
  <%= label :movie, :description, 'Description', class: 'col-form-label' %>
  <%= text_field :movie, :description, class: 'form-control', value: @movie&.dig(:description) %>

  <%= label :movie, :rating, 'Rating', class: 'col-form-label' %>
  <%= select :movie, :rating, ['G','PG','PG-13','R'], {selected:'G'}, {class: 'form-control col-1'} %>
  <%= label :movie, :release_date, 'Released On', class: 'col-form-label' %>
  <%= date_select :movie, :release_date, {selected:Date.parse(@movie&.dig(:date).presence || Date.today.to_s)}, class: 'form-control col-2 d-inline' %>
  <br/>
  <%= label :movie, :url, 'Url image', class: 'col-form-label' %>
  <%= text_field :movie, :url, class: 'form-control', value: @movie&.dig(:url), id: 'movie_url' %>
  <br/>
  <%= submit_tag 'Save Changes', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', movies_path, class: 'btn btn-secondary' %>
<% end %>

